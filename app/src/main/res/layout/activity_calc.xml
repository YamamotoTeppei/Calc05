<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="10dp" android:background="@android:color/holo_blue_light"
              android:gravity="center">

    <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="5">

        <TextView
                android:text="0"
                android:id="@+id/textView1"
                android:layout_column="0"
                android:layout_columnSpan="4"
                android:layout_columnWeight="0"
                android:padding="5dp"
                android:textSize="36sp"
                android:layout_gravity="fill_horizontal"
                android:gravity="right"/>
        <Button
                android:text="CLR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonclr" android:layout_column="0" android:layout_row="1"/>
        <Button
                android:id="@+id/button7"
                android:layout_column="0"
                android:layout_row="2"
                android:text="7"/>

        <Button
                android:id="@+id/button8"
                android:layout_column="1"
                android:layout_row="2"
                android:text="8"/>
        <Button
                android:id="@+id/button9"
                android:layout_column="2"
                android:layout_row="2"
                android:text="9"/>
        <Button
                android:id="@+id/buttondiv"
                android:layout_column="3"
                android:layout_row="2"
                android:text="/"/>
        <Button
                android:id="@+id/button4"
                android:layout_column="0"
                android:layout_row="3"
                android:text="4"/>
        <Button
                android:id="@+id/button5"
                android:layout_column="1"
                android:layout_row="3"
                android:text="5"/>
        <Button
                android:id="@+id/button6"
                android:layout_column="2"
                android:layout_row="3"
                android:text="6"/>
        <Button
                android:id="@+id/buttonmul"
                android:layout_column="3"
                android:layout_row="3"
                android:text="*"/>
        <Button
                android:id="@+id/button1"
                android:layout_column="0"
                android:layout_row="4"
                android:text="1"/>
        <Button
                android:id="@+id/button2"
                android:layout_column="1"
                android:layout_row="4"
                android:text="2"/>
        <Button
                android:id="@+id/button3"
                android:layout_column="2"
                android:layout_row="4"
                android:text="3"/>
        <Button
                android:id="@+id/buttonsub"
                android:layout_column="3"
                android:layout_row="4"
                android:text="-"/>
        <Button
                android:id="@+id/button0"
                android:layout_column="0"
                android:layout_row="5"
                android:text="0"/>
        <Button
                android:id="@+id/buttonequal"
                android:layout_column="2"
                android:layout_gravity="fill_horizontal"
                android:layout_row="5"
                android:text="="/>
        <Button
                android:id="@+id/buttonadd"
                android:layout_column="3"
                android:layout_row="5"
                android:text="+"/>
        <Button
                android:text="00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_row="5" android:layout_column="1"
                android:id="@+id/button00"/>
        <Button
                android:text="MOD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_row="1" android:layout_column="3"
                android:id="@+id/buttonmod"/>
    </GridLayout>
</LinearLayout>